<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/full_transparent"
    android:paddingVertical="6sp"
    android:onClick="acessarEnderecoNoMapa"
   >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:src="@drawable/rounded_corner_small"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Icone Lockers"
        android:id="@+id/corner_locker" />

    <ImageView
        android:id="@+id/ic_locker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_locker"
        app:layout_constraintStart_toStartOf="@id/corner_locker"
        app:layout_constraintTop_toTopOf="@id/corner_locker"
        app:layout_constraintBottom_toBottomOf="@id/corner_locker" />



    <TextView
        android:id="@+id/txv_endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ic_locker"
        app:layout_constraintTop_toTopOf="@id/corner_locker"
        app:layout_constraintBottom_toBottomOf="@id/corner_locker"
        android:layout_marginStart="20dp"
        android:text="Av. Sapopemba, 415 - Vila Reg. FeijÃ³"
        android:textColor="@color/white"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_drop_down_24"
        app:layout_constraintEnd_toEndOf="@id/corner_locker"
        app:layout_constraintTop_toTopOf="@id/corner_locker"
        app:layout_constraintBottom_toBottomOf="@id/corner_locker"
        android:layout_marginRight="25dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>