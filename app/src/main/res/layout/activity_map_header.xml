<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/full_transparent"
    android:paddingTop="6sp"
    android:paddingHorizontal="8sp"
    android:id="@+id/map_header"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:src="@drawable/corner_top_small"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Icone Lockers"
        android:id="@+id/corner_locker" />

    <ImageView
        android:id="@+id/ic_locker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_locker"
        app:layout_constraintStart_toStartOf="@id/corner_locker"
        app:layout_constraintTop_toTopOf="@id/corner_locker"
        app:layout_constraintBottom_toBottomOf="@id/corner_locker" />



    <TextView
        android:id="@+id/text_map_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ic_locker"
        app:layout_constraintTop_toTopOf="@id/corner_locker"
        app:layout_constraintBottom_toBottomOf="@id/corner_locker"
        android:layout_marginStart="20dp"
        android:text="Teste"
        android:textColor="@color/white"
        />
</androidx.constraintlayout.widget.ConstraintLayout>